    gem 'jekyll-sitemap'
    gem 'jekyll-target-blank'
    gem 'jekyll-twitter-plugin'
    gem 'jemoji'
    gem 'therubyracer'
    gem 'unicode_utils'
    gem 'webrick'
end

group :other_plugins do
    gem 'httparty'
    gem 'feedjira'
end




